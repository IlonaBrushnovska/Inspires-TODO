
<%- include("partials/header.ejs") %>


<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-body-tertiary">
  <div class="col-md-8 p-lg-5 mx-auto my-5">
    <h1 class="display-3 fw-bold my-2">Wellcome to INSPIRES TO DO!</h1>
    <h2 class="fw-normal mb-3 gold">Start to be efficiently today.</h2>
    <form class=" my-5"  action="/submit" method="POST">
     
      <div class="input-group">
      <input class="input-group-text" type="date" id="date" name="date"> 
      <input class="form-control" aria-label="With textarea" type="text" id="task" name="task" placeholder="Type your goal..."><br>
       
    </div>
    <button class="btn btn-dark w-100 py-2" type="submit" fdprocessedid="anyyk">Submit</button>  
   
  </form>
    
  <h2 class="fw-normal gold mb-3">The secret of getting ahead is getting started.</h2>
  

  <div class="list-group">
    <% if (locals.taskCreated) { %>
      <h3 class="fw-bold text-muted mb-3">Your goals:</h3>
      <%allTasks.forEach((task)=> { %>
    <label class="list-group-item d-flex gap-3">
      <input class="form-check-input flex-shrink-0" type="checkbox" value="" checked="" style="font-size: 1.375em;">
      <span class="pt-1 form-checked-content">
        
        <strong> <%=task %></strong>
     
      </span>
    </label>
    <%}) %>
    <% } %>

  </div>
</div>
</div>










  
 


    
  
  



  
   
